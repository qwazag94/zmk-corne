    bindings = <&lt NUM BSPC>, <&kp DEL>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
)

*/
ZMK_BEHAVIOR(xtra, hold_tap,
    flavor = "hold-preferred";
    tapping-term-ms = <280>;
    quick-tap-ms = <125>;
    bindings = <&kp>, <&kp>;
)




// combos
#undef COMBO_TERM
#define COMBO_TERM 40  // timeout of 40ms (default is 30ms if omitted)
ZMK_COMBO(combo_esc,  &kp ESC, LT1 LT0, DEF)  // custom sleep macro, only active on NAV layer
ZMK_COMBO(combo_tab,  &kp TAB, RT1 RT0, DEF) 
